<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.modifyProductController">
    <children>
        <Pane layoutX="4.0" layoutY="4.0" prefHeight="599.0" prefWidth="892.0" style="-fx-border-color: black; -fx-border-radius: 25;">
            <children>
                <Label layoutX="25.0" layoutY="32.0" text="Modify Product">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font></Label>
                <TextField fx:id="modifyProductSearchBox" layoutX="703.0" layoutY="19.0" promptText="Search by ID or Name" onAction="#getSearchResults"/>
                <TextField fx:id="modifyProductID" layoutX="104.0" layoutY="136.0" disable="true"/>
                <TextField fx:id="modifyProductName" layoutX="104.0" layoutY="176.0" />
                <TextField fx:id="modifyProductInv" layoutX="104.0" layoutY="219.0" prefHeight="27.0" prefWidth="79.0" />
                <TextField fx:id="modifyProductPrice" layoutX="104.0" layoutY="264.0" prefHeight="27.0" prefWidth="79.0" />
                <TextField fx:id="modifyProductMax" layoutX="104.0" layoutY="312.0" prefHeight="27.0" prefWidth="79.0" />
                <TextField fx:id="modifyProductMin" layoutX="251.0" layoutY="312.0" prefHeight="27.0" prefWidth="79.0" />
                <Label layoutX="49.0" layoutY="141.0" text="ID" />
                <Label layoutX="49.0" layoutY="181.0" text="Name" />
                <Label layoutX="49.0" layoutY="224.0" text="Inv" />
                <Label layoutX="49.0" layoutY="269.0" text="Price" />
                <Label layoutX="49.0" layoutY="317.0" text="Max" />
                <Label layoutX="213.0" layoutY="317.0" text="Min" />
                <TableView fx:id="ModifyProductPartTable" layoutX="440.0" layoutY="63.0" prefHeight="200.0" prefWidth="424.0">
                    <columns>
                        <TableColumn fx:id="ModifyProductPartID" prefWidth="75.0" text="Part ID" />
                        <TableColumn fx:id="ModifyProductPartName" prefWidth="90.0" text="Part Name" />
                        <TableColumn fx:id="ModifyProductPartInv" prefWidth="130.0" text="Inventory Level" />
                        <TableColumn fx:id="ModifyProductPartPrice" prefWidth="130.0" text="Price/Cost per Unit" />
                    </columns>
                </TableView>
                <TableView fx:id="ModifyProductAssociatedPartTable" layoutX="440.0" layoutY="312.0" prefHeight="200.0" prefWidth="424.0">
                    <columns>
                        <TableColumn fx:id="ModifyProductAssociatedPartID" prefWidth="75.0" text="Product ID" />
                        <TableColumn fx:id="ModifyProductAssociatedPartName" prefWidth="90.0" text="Product Name" />
                        <TableColumn fx:id="ModifyProductAssociatedPartInv" prefWidth="130.0" text="Inventory Level" />
                        <TableColumn fx:id="ModifyProductAssociatedPartPrice" prefWidth="130.0" text="Price/Cost per Unit" />
                    </columns>
                </TableView>
                <Button layoutX="763.0" layoutY="273.0" mnemonicParsing="false" onAction="#addAssociation" text="Add" />
                <Button layoutX="683.0" layoutY="523.0" mnemonicParsing="false" prefHeight="27.0" prefWidth="170.0" onAction="#removeAssociation" text="Remove Associated Part" />
                <Button layoutX="683.0" layoutY="558.0" mnemonicParsing="false" onAction="#toUpdateProduct" text="Save" />
                <Button layoutX="798.0" layoutY="558.0" mnemonicParsing="false" onAction="#backToMain" text="Cancel" />
            </children>
        </Pane>
    </children>


</AnchorPane>
